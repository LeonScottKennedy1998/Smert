<Window x:Class="Smert.AdminWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smert"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="5"/>
        <Button x:Name="RoleButton" Content="Роли" Click="RoleButton_Click" />
        <Button x:Name="EmployyeButton" Content="Сотрудники" Grid.Column="1" Click="EmployyeButton_Click" />
        <Button x:Name="CustomersButton" Content="Клиенты" Grid.Column="2" Click="CustomersButton_Click" />

    </Grid>
</Window>
