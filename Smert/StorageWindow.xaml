<Window x:Class="Smert.StorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smert"
        mc:Ignorable="d"
        Title="StorageWindow" Height="450" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.ColumnSpan="6"/>
    <Button x:Name="TypeAnimalButton" Content="Тип животных" Grid.Column="0" Click="TypeAnimalButton_Click"/>
    <Button x:Name="AnimalButton" Content="Животные" Grid.Column="1" Click="AnimalButton_Click"  />
    <Button x:Name="ProductTypeButton" Content="Категория продуктов" Grid.Column="2" Click="ProductTypeButton_Click"   />
    <Button x:Name="ProductButton" Content="Продукты" Grid.Column="3" Click="ProductButton_Click" />
    </Grid>
</Window>
